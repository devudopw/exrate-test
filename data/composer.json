{
  "config": {
    "preferred-install": "dist"
  },
  "prefer-stable": true,
  "require": {
    "php": ">=7.3",
    "workerman/webman-framework": "^1.0",
    "vlucas/phpdotenv": ">=4.1,<6.0",
    "doctrine/dbal": "^3.0",
    "monolog/monolog": "^2.2",
    "respect/validation": "^2.2",
    "neomerx/json-api": "^4.0"
  },
  "require-dev": {
    "phpunit/phpunit": "^9.0"
  },
  "autoload": {
    "psr-4": {
      "App\\": "app/"
    },
    "files": [
      "./support/helpers.php"
    ]
  },
  "scripts": {
    "phpunit": "vendor/bin/phpunit",
    "phpunit-unit": "vendor/bin/phpunit --testsuite=unit"
  }
}